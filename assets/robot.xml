<body name="robot" pos="0 0 0" euler="0 0 0">
    <!-- shell radius 17cm, wheel radius 4cm, distance between wheels 28cm -->
    <freejoint name="robot"></freejoint>
    <site name="front-flag" rgba="0.3 0.3 0.9 1" pos="0.12 0 0.22" type="sphere" size="0.05"></site>

    <!-- <body name="balancer" pos="0 0 0.05">
        <geom mass="3000" type="sphere" size="0.01"></geom>
    </body> -->

    <body name="front-wheel" pos="0.14 0  0.01">
        <joint type="ball" pos="0 0 0"></joint>
        <geom contype="2" conaffinity="2" type="sphere" size="0.01"></geom>
    </body>

    <body name="back-wheel" pos="-0.14 0  0.01">
        <joint type="ball" pos="0 0 0"></joint>
        <geom contype="2" conaffinity="2" type="sphere" size="0.01"></geom>
    </body>

    <body name="left-wheel" pos="0 0.14 0.04" euler="90 0 0">
        <joint damping="0.3" name="left-wheel" type="hinge" pos="0 0 0" axis="0 0 -1"></joint>
        <geom contype="2" conaffinity="2" rgba="0.1 0.1 0.1 1" type="cylinder" size="0.04 0.005"></geom>
    </body>

    <body name="right-wheel" pos="0 -0.14 0.04" euler="-90 0  0">
        <joint damping="0.3" name="right-wheel" type="hinge" pos="0 0 0" axis="0 0 1"></joint>
        <geom contype="2" conaffinity="2" rgba="0.1 0.1 0.1 1" type="cylinder" size="0.04 0.005"></geom>
    </body>
    <body name="shell">
      <geom type="cylinder" rgba="0.3 0.9 0.3 1" pos="0 0 0.12" size="0.17 0.1"></geom>
    </body>
</body>
